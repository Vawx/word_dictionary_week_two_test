
<div class="container">
  <div class="col-lg-6 col-lg-offset-3">
    <% @words.each do |word| %>
    <form class="" action="/word/<%= word.id %>">
      <div class="well">
        <div class="wrapper" style="text-align:center;">
          <p class="word"> <a class="hidden-a" href="/word/<%= word.id %>"><%= word.word %></a> </p>
          <% word.definition.each do |definition| %>
            <div class="definition"><%= definition.definition %><div/>
          <%end%>
          <div class="" style="padding-top:12px;">
            <button class="btn btn-primary" type="submit" name="button">Add Definition</button>
          </div>
       </div>
      </div>
    </form>
    <% end %>
  </div>
</div>
